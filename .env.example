# ==================== REQUIRED ====================
# Discord Bot Token
DISCORD_TOKEN=your_discord_bot_token_here

# ==================== BOT SETTINGS ====================
# Bot prefix (default: !)
BOT_PREFIX=!

# Bot status message
BOT_STATUS=watching üêæ AnimalVerse

# ==================== API KEYS (ALL OPTIONAL) ====================
# Leave blank to use fallback images
# Cat API - Get free key at https://thecatapi.com/
CATS_API_KEY=

# Dog API - Get free key at https://thedogapi.com/
DOGS_API_KEY=

# ==================== DAILY ANIMALS CONFIG ====================
# Default time for daily animals (24-hour format HH:MM)
DEFAULT_DAILY_TIME=08:00

# Enable daily animals by default for new guilds
ENABLE_DAILY_BY_DEFAULT=false

# ==================== ANIMAL SELECTION ====================
# Default animals to show (comma-separated)
# Leave empty to use all animals
# Example: cat,dog,fox,rabbit
DEFAULT_ANIMALS=

# Minimum wait between API calls (seconds)
API_CALL_DELAY=0.1

# API timeout (seconds)
API_TIMEOUT=5

# ==================== DATABASE ====================
# Database directory
DATABASE_DIR=data

# Auto-backup database (true/false)
AUTO_BACKUP_DB=true

# ==================== LOGGING ====================
# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Log file path (leave empty to disable file logging)
LOG_FILE=bot.log

# ==================== FEATURES ====================
# Enable daily animals feature
FEATURE_DAILY_ENABLED=true

# Enable statistics tracking
FEATURE_STATS_ENABLED=true

# Enable slash commands
FEATURE_SLASH_COMMANDS=true

# Maximum animals per daily selection
MAX_DAILY_ANIMALS=19

# ==================== PERFORMANCE ====================
# Cogs to load (comma-separated, leave empty to load all)
# Example: animals,daily,info
LOAD_COGS=

# Cache timeout (seconds) - how long to keep fetched images
CACHE_TIMEOUT=3600

# Max concurrent API requests
MAX_CONCURRENT_REQUESTS=5

# ==================== OPTIONAL CUSTOMIZATION ====================
# Bot owner ID (for owner-only commands)
BOT_OWNER_ID=

# Support server invite
SUPPORT_SERVER=https://github.com/aurora9161/animalverse

# Source code URL
SOURCE_CODE_URL=https://github.com/aurora9161/animalverse

# ==================== NOTES ====================
# - All API keys are OPTIONAL - bot works without them
# - Leave blank/false to disable optional features
# - Most settings have sensible defaults
# - No restart needed after .env changes (mostly)
